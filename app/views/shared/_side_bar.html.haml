.side-bar
  .side-header
    .name
      = current_user.name
    .top-items-icons
      = link_to new_group_path, class: "top-items-icon" do
        = icon('fas', 'edit')
      = link_to edit_user_path(current_user), class: "top-items-icon" do
        = icon('fas', 'cogs')      
  .group-lists
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
